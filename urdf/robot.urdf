<robot name="myRobot">

<!-- base link -->
<link name="base_link">
    <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
            <cylinder radius="0.4" length="0.5"/>
        </geometry>
        <material>
            <color rgba="0.3 0.6 1.0 1.0"/>
        </material>
    </visual>
</link>

<!-- base joint -->
<joint name="base_joint" type="fixed">
    <origin xyz="0 0 0.3" rpy="0 0 0"/>
    <parent link="base_footprint"/>
    <child link="base_link"/>
</joint>

<!-- right wheel -->
<link name="wheel_right_link">
    <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
            <cylinder radius="0.15" length="0.2"/>
        </geometry>
        <material>
            <color rgba="0 0 0 0"/>
        </material>
    </visual>
</link>
</robot>